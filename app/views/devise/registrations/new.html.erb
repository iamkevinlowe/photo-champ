<div class="row">
  <div class="col-md-8">
    <h3>Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter password (#{@minimum_password_length} characters minimum)" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Enter password confirmation" %>
      </div>

      <div class="form-group pull-right">
        <%= f.submit "Register", class: 'btn btn-default' %>
      </div>

      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Standard Account</h4>
      </div>
      <div class="panel-body">
        <ul>
          <li>Free membership</li>
          <li>5 photo uploads</li>
          <li>Challenge any user</li>
        </ul>
      </div>
    </div>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Premium Account</h4>
      </div>
      <div class="panel-body">
        <ul>
          <li>$10/yr membership</li>
          <li>20 photo uploads</li>
          <li>Create and update categories</li>
          <li>More features soon...</li>
        </ul>
      </div>
    </div>
  </div>
</div>
