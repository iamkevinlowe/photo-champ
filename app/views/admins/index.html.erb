<div class="row text-color-primary">
  <div class="col-sm-6 text-center">
    <h3>Banned Users</h3>
    <% if @banned_users.any? %>
      <table class="table table-striped table-condensed">
        <tr>
          <td><h5>#</h5></td>
          <td><h5>Name</h5></td>
          <td><h5>Email</h5></td>
          <td><h5>Banned</h5></td>
        </tr>
        <%= render partial: 'admins/user', collection: @banned_users %>
      </table>
    <% else %>
      <p>There are no banned users.</p>
    <% end %>
  </div>

  <div class="col-sm-6 text-center">
    <h3>Reported Photos</h3>
    <% if @reported_photos.any? %>
      <table class="table table-striped table-condensed">
        <tr>
          <td><h5>Photo</h5></td>
          <td><h5>User</h5></td>
          <td><h5>Reported</h5></td>
        </tr>
        <% @reported_photos.each do |photo, count| %>
          <%= render partial: 'admins/photo', locals: { photo: photo, count: count } %>
        <% end %>
      </table>
    <% else %>
      <p>There are no reported photos.</p>
    <% end %>
  </div>
</div>
