<div id="featuredCarousel", class="carousel slide mtl" data-ride="carousel">

  <ol class="carousel-indicators">
    <li data-target="#featuredCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#featuredCarousel" data-slide-to="1"></li>
    <li data-target="#featuredCarousel" data-slide-to="2"></li>
    <li data-target="#featuredCarousel" data-slide-to="3"></li>
  </ol>

  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <% if @top_photos[0].url.url.nil? %>
        <img src="http://placehold.it/960x640" alt="First" class="middle">
      <% else %>
        <%= image_tag(@top_photos[0].url.feature, alt: @top_photos[0].category.name, class: 'middle') %>
      <% end %>  
      <div class="carousel-caption">
        <p><%= @top_photos[0].category.name.capitalize %></p>
        <p>Image by: <%= @top_photos[0].user.name %></p>
      </div>
    </div>

    <div class="item">
      <% if @top_photos[1].url.url.nil? %>
        <img src="http://placehold.it/960x640" alt="Second" class="middle">
      <% else %>
        <%= image_tag(@top_photos[1].url.feature, alt: @top_photos[1].category.name, class: 'middle') %>
      <% end %> 
      <div class="carousel-caption">
        <p><%= @top_photos[1].category.name.capitalize %></p>
        <p>Image by: <%= @top_photos[1].user.name %></p>
      </div>
    </div>

    <div class="item">
      <% if @top_photos[2].url.url.nil? %>
        <img src="http://placehold.it/960x640" alt="Third" class="middle">
      <% else %>
        <%= image_tag(@top_photos[2].url.feature, alt: @top_photos[2].category.name, class: 'middle') %>
      <% end %> 
      <div class="carousel-caption">
        <p><%= @top_photos[2].category.name.capitalize %></p>
        <p>Image by: <%= @top_photos[2].user.name %></p>
      </div>
    </div>

    <div class="item">
      <% if @top_photos[3].url.url.nil? %>
        <img src="http://placehold.it/960x640" alt="Fourth" class="middle">
      <% else %>
        <%= image_tag(@top_photos[3].url.feature, alt: @top_photos[3].category.name, class: 'middle') %>
      <% end %> 
      <div class="carousel-caption">
        <p><%= @top_photos[3].category.name.capitalize %></p>
        <p>Image by: <%= @top_photos[3].user.name %></p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3 class="text-color-primary">
      Think you have a blue ribbon photo?<br>
      Prove it in a duel and see who comes out on top.<br>
      Will you be undefeated?
    </h3>
    <div class="text-center">
      <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
