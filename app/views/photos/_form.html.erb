<%= form_for photo do |f| %> 
  <div class="row mbm">
    <div class="col-sm-12 form-inline">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category_id, categories, {}, { class: 'form-control' } %>
      </div>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter photo name' %>
      </div>
    </div>
  </div>

  <div class="row form-inline">
    <div class="col-sm-12">
      <div class="form-group">
        <% unless photo.url? %>
          <%= f.file_field :url, class: 'pull-right file-mtm' %>
          <%= f.hidden_field :url_cache %>
        <% end %>
      </div>

      <div class="form-group">
        <% if photo.url? %>
          <%= f.submit "Edit", class: 'btn btn-default pull-right' %>
        <% else %>
          <%= f.submit "Upload", class: 'btn btn-default pull-right' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>  