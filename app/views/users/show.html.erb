<div class="row text-color-primary">
  <div class="col-sm-12">
    <h3>Top Competitors</h3>
  </div>
</div>

<div class="row">
  <%= render partial: 'photos/photo', collection: @top_photos, as: :photo %>
</div>

<hr class="mtl">

<% if @challenges.any? %>
  <div class="row text-color-primary">
    <div class="col-sm-12">
      <h3>Current Challenges</h3>
    </div>
  </div>

  <div class="row">
    <%= render partial: @challenges %>
  </div>

  <hr class="mtl">
<% end %>

<% if @favorites.any? %>
  <div class="row text-color-primary">
    <div class="col-sm-12">
      <h3>Favorite Photos</h3>
    </div>
  </div>

  <div class="row">
    <%= render partial: 'photos/photo', collection: @favorites, as: :photo %>
  </div>

  <hr class="mtl">
<% end %>

<div class="row text-color-primary">
  <div class="col-sm-12">
    <h3>My Photos</h3>
  </div>
</div>

<div class="row">
  <%= render partial: @photos %>
  <% if policy(@photo).new? && @user == current_user %>
    <div class="col-md-4 col-sm-6 inline-block">
      <%= link_to new_photo_path do %>
        <%= image_tag('upload.jpg', alt: 'New Photo', class: 'img-rounded img-responsive') %>
      <% end %>
    </div>
  <% end %>
</div>