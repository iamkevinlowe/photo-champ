<!DOCTYPE html>
<html>
<head>
  <title>PhotoChamp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :meta_tags if content_for?(:meta_tags) %>
  <%= yield :stripe if content_for?(:stripe) %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "PhotoChamp", root_path, class: 'strong' %></li>
      <li><%= link_to "Categories", categories_path, class: 'strong' %></li>
      <div class="user-info pull-right">
        <% if current_user %>
          Hello <%= link_to current_user.name, current_user, class: 'strong' %>!&nbsp;
          <%= link_to "Registration", edit_user_registration_path, class: 'btn btn-default btn-sm' %>&nbsp;
          <%= link_to "Log Out", destroy_user_session_path, class: 'btn btn-default btn-sm', method: :delete %>
        <% else %>
          <%= link_to "Log In", new_user_session_path, class: 'btn btn-default btn-sm' %>
        <% end %>
      </div>
    </ul>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
