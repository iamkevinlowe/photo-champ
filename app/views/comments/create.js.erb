<% if @comment.valid? %>
  $(".js-comments").prepend("<%= escape_javascript(render(@comment)) %>");
  $(".new-comment").html("<%= escape_javascript(render partial: 'comments/form', locals: { comment: @new_comment }) %>");
  blocmetrics.report("Comment created");
<% else %>
  $(".new_comment").html("<%= escape_javascript(render partial: 'comments/form', locals: { comment: @comment }) %>");
<% end %>